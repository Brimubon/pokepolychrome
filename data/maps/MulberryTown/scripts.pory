    "appreciate my creative choices."
}

text MulberryTown_EventScript_MainSignText {
    "Mulberry Town- \n"
    "“A mysterious forest surrounds it.”"
}

text MulberryTown_EventScript_ForestSignText {
    "Entering Mulberry Woods\p"
    "NOTE: Please stop putting top hats on\n"
    "the wild Pokemon here."
}
