mapscripts HoneydewTown_MapScripts {
    MAP_SCRIPT_ON_LOAD {
        setflag(FLAG_TEMP_5)
        setflag(FLAG_TEMP_6)
        setflag(FLAG_TEMP_7)
        setflag(FLAG_TEMP_8)


        random(4)
        switch(var(VAR_RESULT)) {
            case 0:
                clearflag(FLAG_TEMP_5)
            case 1:
                clearflag(FLAG_TEMP_6)
            case 2:
                clearflag(FLAG_TEMP_5)
                clearflag(FLAG_TEMP_7)
            case 3:
                clearflag(FLAG_TEMP_8)
        }
    }
}

